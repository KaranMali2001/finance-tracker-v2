  },
  "dependencies": {
    "@clerk/nextjs": "^6.35.5",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.11",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "form-data": "^4.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.555.0",
    "next": "16.0.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@clerk/types": "^4.101.3",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "openapi-typescript-codegen": "^0.29.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write",
      "biome format --write"
    ],
    "*.{json,md,yml,yaml}": [
      "biome format --write"
    ]
  }
}
