{
  "name": "finance-tracker-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "type-check": "tsc --noEmit",
    "prepare": "cd .. && husky install finance-tracker-web/.husky",
